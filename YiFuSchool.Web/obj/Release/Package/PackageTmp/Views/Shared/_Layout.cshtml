        .tag {
            border: 1px solid #dedede;
            position: relative;
            background-color: #FFF;
        }

            .tag:before, .tag:after {
                content: "";
                display: block;
                border-width: 17px;
                position: absolute;
                bottom: -35px;
                left: 70%;
                border-style: solid dashed dashed;
                border-color: #dedede transparent transparent;
                font-size: 0;
                line-height: 0;
            }

            .tag:after {
                bottom: -33px;
                border-color: #FFF transparent transparent;
            }
        /*--- slider-css --*/
        .slider {
            position: relative;
        }

        .rslides {
            position: relative;
            list-style: none;
            overflow: hidden;
            width: 100%;
            padding: 0;
            margin: 0;
            height: 75vh;
        }

            .rslides li {
                -webkit-backface-visibility: hidden;
                position: absolute;
                display: none;
                width: 100%;
                left: 0;
                top: 0;
            }

                .rslides li:first-child {
                    position: relative;
                    display: block;
                    float: left;
                }

            .rslides img {
                display: block;
                height: auto;
                float: left;
                /*width: 100%;*/
                border: 0;
            }

            .rslides .caption {
                position: absolute;
                text-align: center;
                top: 0;
                bottom: 0;
                left: 0;
                right: 0;
                margin: auto;
                width: 100%;
                height: 500px;
            }

                .rslides .caption h3 {
                    color: #FFF;
                    font-weight: 700;
                    font-size: 60px;
                    margin: 100px 0 40px 0px;
                }

                /*.rslides .caption span {
                        color: #2196F3;
                    }*/

                .rslides .caption p {
                    color: #FFF;
                    line-height: 1.5em;
                    font-size: 20px;
                    font-weight: 300;
                    text-align: center;
                    margin: 40px 0;
                }

        a.morebtn {
            background: transparent;
            padding: 15px 0;
            display: block;
            font-size: 15px;
            text-transform: uppercase;
            color: #FFF;
            width: 15%;
            margin: 0 auto;
            border: 1px solid #fff;
        }

        .callbacks_nav {
            position: absolute;
            -webkit-tap-highlight-color: rgba(0,0,0,0);
            top: 50%;
            z-index: 3;
            text-indent: -9999px;
            overflow: hidden;
            text-decoration: none;
            height: 80px;
            width: 80px;
            margin-top: -45px;
        }

            .callbacks_nav.next {
                background-image: url('../../images/left2.png');
                left: auto;
                background-position: right top;
                right: 3px;
            }

            .callbacks_nav.prev {
                background-image: url('../../images/left1.png');
                right: auto;
                background-position: left top;
                left: 3px;
            }

            .callbacks_nav.next:hover {
                background-image: url('../../images/right2.png');
                left: auto;
                background-position: right top;
                right: 3px;
            }

            .callbacks_nav.prev:hover {
                background-image: url('../../images/right1.png');
                right: auto;
                background-position: left top;
                left: 3px;
            }

        ul.callbacks_tabs.callbacks1_tabs {
            display: none;
        }

        ul.dropdown-menu {
            border-radius: 0;
            padding-top: 10px;
            /*border-top: none;*/
        }

            ul.dropdown-menu li {
                border-bottom: 1px solid #f5f5f5;
            }

                ul.dropdown-menu li a {
                    font-size: 12px;
                    padding: 10px 20px;
                    color: #466085;
                }

                    ul.dropdown-menu li a:hover {
                        color: #60c9eb;
                    }

        #toTop {
            display: none;
            text-decoration: none;
            position: fixed;
            bottom: 10px;
            right: 15px;
            overflow: hidden;
            width: 40px;
            height: 21px;
            border: none;
            text-indent: 100%;
            background: url(../../images/to-top2.png) no-repeat 0px 0px;
        }
    </style>
</head>

