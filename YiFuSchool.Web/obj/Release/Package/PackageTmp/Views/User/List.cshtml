
@{
    ViewBag.Title = "会员列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var staticUrl = YiFuSchool.Web.Core.WebConfig.DefaultSiteUrl;
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>思琪 — 会员管理</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>会员列表</h5>
                    <span class="label label-primary pull-right" id="SumCount">今日注册 160</span>
                </div>
                <div class="ibox-content">

                    <div class="row m-b-sm m-t-sm">
                        <form class="form-horizontal" id="getFrom">
                            <div class="form-body">
                                <div class="row" id="div_day">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">开始时间</label>
                                            <div class="col-sm-9">
                                                <input type="text" id="txtStartDateDays" class="laydate-icon form-control layer-date" value="" placeholder="开始日期" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">截止日期</label>
                                            <div class="col-sm-9">
                                                <input type="text" id="txtEndDateDays" class="laydate-icon form-control layer-date" value="" placeholder="截止日期" />
                                            </div>
                                        </div>
                                    </div><div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">截止日期</label>
                                            <div class="col-sm-9">
                                                <input type="text" id="txtEndDateDays" class="laydate-icon form-control layer-date" value="" placeholder="截止日期" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">客户电话</label>
                                            <div class="col-sm-9">
                                                <input type="text" id="txtTel" class="form-control" value="" placeholder="客户电话" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">大类</label>
                                            <div class="col-sm-9">
                                                <select id="txtParentServices" class="form-control" data-placeholder="大类"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">截止日期</label>
                                            <div class="col-sm-9">
                                                <input type="text" id="txtEndDateDays" class="laydate-icon form-control layer-date" value="" placeholder="截止日期" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <p class="pull-right">
                        <button type="button" class="btn btn-outline btn-primary btn-sm" id="butSer">
                            <i class="fa fa-search"></i> 搜索
                        </button>
                        <a href="@(staticUrl)User/Add" class="btn btn-outline btn-primary btn-sm"><i class="fa fa-plus"></i> 添加会员</a>
                    </p>

                    <div class="clearfix"></div>

                    <div class="table-responsive" id="list">
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>会员姓名</th>
                                <th>会员级别</th>
                                <th>会员电话</th>
                                <th>会员余额</th>
                                <th>注册时间</th>
                                <th>会员地址</th>
                                <th id="oper">操作</th>
                            </tr>
                            <tbody id="tbody_Data"></tbody>
                        </table>
                    </div>
                    <div id="div_Page">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script type="text/template" id="template_Web">
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td>
                <a href="javascript:void(0);" class="btn default btn-xs purple "><i class="icon-edit"></i>编辑</a>
                <a href="javascript:void(0);" class="btn default btn-xs purple "><i class="icon-trash"></i>删除</a>
            </td>
        </tr>
    </script>

    <script src="~/PageScript/Member/member.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            @*Member.PageData = @(Html.Raw(ViewBag.PageData))

                Member.Init();*@

            laydate({
                elem: '#div_day .laydate-icon',
                event: 'focus',
                format: 'YYYY-MM-DD'
            });

            $("#searchbox").on("show.bs.modal", function (e) {
                $(".modal-body .chosen-container").width("100%");

                laydate.reset();
            });
        })
    </script>
}

